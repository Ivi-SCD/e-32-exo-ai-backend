# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
DEBUG=false

# DATABASE 
DATABASE_URL=postgresql://nasa_user:nasa_password@localhost:5433/nasa_exoplanets

# LOG
LOG_LEVEL=info

# CORS
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# MODEL
MODEL_PATH=./notebooks/models
DATA_PATH=./notebooks/data

# SECURITY
SECRET_KEY=nasa-exoplanet-secret-key-change-in-production

# RATE LIMITING
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CACHE
CACHE_TTL=300

# UPLOAD
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=["csv", "xlsx", "xls"]

# PROCESSING
MAX_BATCH_SIZE=1000
PROCESSING_TIMEOUT=300

# DEVELOPING
ENABLE_DOCS=true
ENABLE_REDOC=true
